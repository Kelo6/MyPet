/**app.wxss**/
/* 宠物健康助手 - 全局应用样式 */

/* 导入设计体系 */
@import "styles/theme.wxss";
@import "styles/globals.wxss";

/* ==================== 全局样式重置 ==================== */

page {
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  font-size: var(--font-md);
  line-height: var(--line-height-normal);
  color: var(--text-primary);
  background-color: var(--bg-secondary);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 通用容器 */
.container {
  max-width: 750rpx;
  margin: 0 auto;
  padding: 0 var(--space-lg);
}

/* ==================== 通用组件样式 ==================== */

/* 按钮基础样式 */
button {
  border: none;
  outline: none;
  background: none;
  padding: 0;
  margin: 0;
  font-family: inherit;
  font-size: inherit;
  line-height: inherit;
  color: inherit;
  border-radius: 0;
}

button::after {
  display: none;
}

/* 输入框基础样式 */
input, textarea {
  font-family: inherit;
  font-size: inherit;
  line-height: inherit;
  color: inherit;
  background: transparent;
  border: none;
  outline: none;
  padding: 0;
  margin: 0;
}

/* 图片基础样式 */
image {
  display: block;
  width: auto;
  height: auto;
  max-width: 100%;
}

/* ==================== 增强版按钮样式 ==================== */

.btn-primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: var(--bg-primary);
  border: none;
  border-radius: var(--radius-lg);
  padding: var(--space-lg) var(--space-2xl);
  font-size: var(--font-md);
  font-weight: var(--font-weight-semibold);
  transition: all var(--transition-fast) var(--ease-out);
  box-shadow: var(--shadow-sm);
  position: relative;
  overflow: hidden;
}

.btn-primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left var(--transition-normal) var(--ease-in-out);
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-md);
}

.btn-primary:active::before {
  left: 100%;
}

.btn-secondary {
  background: var(--bg-primary);
  color: var(--primary-color);
  border: 2px solid var(--primary-color);
  border-radius: var(--radius-lg);
  padding: var(--space-md) var(--space-xl);
  font-size: var(--font-md);
  font-weight: var(--font-weight-semibold);
  transition: all var(--transition-fast) var(--ease-out);
}

.btn-secondary:active {
  background: var(--primary-color);
  color: var(--bg-primary);
  transform: scale(0.98);
}

.btn-ghost {
  background: transparent;
  color: var(--text-secondary);
  border: 2px solid var(--border-normal);
  border-radius: var(--radius-lg);
  padding: var(--space-md) var(--space-lg);
  font-size: var(--font-sm);
  font-weight: var(--font-weight-medium);
  transition: all var(--transition-fast) var(--ease-out);
}

.btn-ghost:active {
  background: var(--bg-tertiary);
  border-color: var(--border-dark);
  transform: scale(0.98);
}

.btn-accent {
  background: linear-gradient(135deg, var(--accent-color) 0%, var(--accent-dark) 100%);
  color: var(--bg-primary);
  border: none;
  border-radius: var(--radius-lg);
  padding: var(--space-lg) var(--space-2xl);
  font-size: var(--font-md);
  font-weight: var(--font-weight-semibold);
  transition: all var(--transition-fast) var(--ease-out);
  box-shadow: var(--shadow-sm);
}

.btn-accent:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-md);
}

/* ==================== 卡片样式 ==================== */

.card {
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  padding: var(--space-xl);
  margin-bottom: var(--space-lg);
  border: 1px solid var(--border-light);
  transition: all var(--transition-normal) var(--ease-out);
  position: relative;
  overflow: hidden;
}

.card:hover {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-lg);
}

.card.interactive:active {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-md);
}

.card-header {
  margin-bottom: var(--space-lg);
  padding-bottom: var(--space-md);
  border-bottom: 1px solid var(--border-light);
}

.card-title {
  font-size: var(--font-xl);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
  margin-bottom: var(--space-xs);
  line-height: var(--line-height-tight);
}

.card-subtitle {
  font-size: var(--font-sm);
  color: var(--text-secondary);
  line-height: var(--line-height-normal);
}

.card-footer {
  margin-top: var(--space-lg);
  padding-top: var(--space-md);
  border-top: 1px solid var(--border-light);
}

/* ==================== 增强版徽章样式 ==================== */

.badge {
  display: inline-flex;
  align-items: center;
  gap: var(--space-xs);
  padding: var(--space-xs) var(--space-sm);
  border-radius: var(--radius-full);
  font-size: var(--font-xs);
  font-weight: var(--font-weight-semibold);
  line-height: 1;
  white-space: nowrap;
}

.badge-success {
  background: var(--success-light);
  color: var(--success-dark);
  border: 1px solid var(--success-color);
}

.badge-warning {
  background: var(--warning-light);
  color: var(--warning-dark);
  border: 1px solid var(--warning-color);
}

.badge-error {
  background: var(--error-light);
  color: var(--error-dark);
  border: 1px solid var(--error-color);
}

.badge-info {
  background: var(--info-light);
  color: var(--info-dark);
  border: 1px solid var(--info-color);
}

.badge-primary {
  background: var(--primary-bg);
  color: var(--primary-color);
  border: 1px solid var(--primary-color);
}

.badge-accent {
  background: var(--accent-bg);
  color: var(--accent-color);
  border: 1px solid var(--accent-color);
}

/* ==================== 状态指示器 ==================== */

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: var(--radius-full);
  display: inline-block;
  margin-right: var(--space-xs);
}

.status-dot.success {
  background: var(--success-color);
}

.status-dot.warning {
  background: var(--warning-color);
}

.status-dot.error {
  background: var(--error-color);
}

.status-dot.info {
  background: var(--info-color);
}

/* ==================== 分割线 ==================== */

.divider {
  height: 1px;
  background: var(--border-light);
  margin: var(--space-lg) 0;
}

.divider.thick {
  height: 2px;
  background: var(--border-normal);
}

.divider.gradient {
  background: linear-gradient(90deg, transparent, var(--border-normal), transparent);
}

/* ==================== 工具类扩展 ==================== */

/* 渐变背景 */
.gradient-primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--accent-color) 100%);
}

.gradient-secondary {
  background: linear-gradient(135deg, var(--accent-color) 0%, var(--primary-color) 100%);
}

.gradient-subtle {
  background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);
}

/* 毛玻璃效果 */
.glass {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.glass-dark {
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

/* ==================== 动画定义 ==================== */

/* 页面进入动画 */
@keyframes pageEnter {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.page-enter {
  animation: pageEnter var(--transition-normal) var(--ease-out);
}

/* 卡片悬浮动画 */
@keyframes cardFloat {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-4rpx);
  }
}

.card-float {
  animation: cardFloat 3s ease-in-out infinite;
}

/* ==================== 响应式工具类 ==================== */

/* 显示/隐藏工具类 */
@media screen and (max-width: 480px) {
  .hidden-mobile {
    display: none !important;
  }
}

@media screen and (min-width: 481px) {
  .visible-mobile {
    display: none !important;
  }
}

/* ==================== 可访问性增强 ==================== */

.btn-primary:focus-visible,
.btn-secondary:focus-visible,
.btn-ghost:focus-visible,
.btn-accent:focus-visible,
.card:focus-visible {
  outline: 2px solid var(--primary-color);
  outline-offset: 2px;
}

/* 高对比度模式 */
@media (prefers-contrast: high) {
  .card {
    border-width: 2px;
    border-color: var(--text-primary);
  }
  
  .btn-secondary,
  .btn-ghost {
    border-width: 2px;
  }
}

/* 减少动画模式 */
@media (prefers-reduced-motion: reduce) {
  .btn-primary,
  .btn-secondary,
  .btn-ghost,
  .btn-accent,
  .card {
    transition: none;
  }
  
  .btn-primary::before {
    display: none;
  }
  
  .page-enter,
  .card-float {
    animation: none;
  }
}