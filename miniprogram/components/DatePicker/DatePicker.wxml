<!--components/DatePicker/DatePicker.wxml-->
<view wx:if="{{show}}" class="date-picker-overlay" bindtap="onMaskTap">
  <view class="date-picker-content" bindtap="onContentTap" catch:tap="true">
    <!-- 标题栏 -->
    <view class="picker-header">
      <view class="header-btn cancel" bindtap="onCancel">
        <text>取消</text>
      </view>
      <view class="header-title">
        <text>{{title}}</text>
      </view>
      <view class="header-btn confirm" bindtap="onConfirm">
        <text>确认</text>
      </view>
    </view>

    <!-- 选择器内容 -->
    <view class="picker-body">
      <!-- 日期选择 -->
      <view wx:if="{{mode === 'date' || mode === 'datetime'}}" class="picker-section">
        <view class="section-title">选择日期</view>
        <picker
          mode="date"
          value="{{selectedDate}}"
          start="{{minDate}}"
          end="{{maxDate}}"
          bindchange="onDateChange"
        >
          <view class="picker-input">
            <text>{{selectedDate || '请选择日期'}}</text>
            <text class="picker-arrow">></text>
          </view>
        </picker>
      </view>

      <!-- 时间选择 -->
      <view wx:if="{{mode === 'time' || mode === 'datetime'}}" class="picker-section">
        <view class="section-title">选择时间</view>
        <picker
          mode="time"
          value="{{selectedTime}}"
          bindchange="onTimeChange"
        >
          <view class="picker-input">
            <text>{{selectedTime || '请选择时间'}}</text>
            <text class="picker-arrow">></text>
          </view>
        </picker>
      </view>
    </view>
  </view>
</view>




