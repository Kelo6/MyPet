/* components/EmptyState/EmptyState.wxss */

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 60rpx;
  text-align: center;
  min-height: 400rpx;
}

.empty-icon {
  margin-bottom: 32rpx;
}

.icon-emoji {
  font-size: 120rpx;
  opacity: 0.6;
}

.empty-title {
  margin-bottom: 16rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #1e293b;
  line-height: 1.4;
}

.empty-description {
  margin-bottom: 48rpx;
  max-width: 480rpx;
}

.description-text {
  font-size: 28rpx;
  color: #64748b;
  line-height: 1.6;
}

.empty-action {
  width: 100%;
  max-width: 320rpx;
}

.action-button {
  width: 100%;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 32rpx rgba(99, 102, 241, 0.3);
  transition: all 0.3s ease;
}

.action-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(99, 102, 241, 0.3);
}




