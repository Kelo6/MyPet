/* components/PetCard/PetCard.wxss */
/* 增强版宠物卡片组件样式 */

@import "../../styles/globals.wxss";

/* ==================== 卡片容器 ==================== */

.pet-card {
  position: relative;
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  padding: var(--space-lg);
  margin-bottom: var(--space-md);
  transition: all var(--transition-normal) var(--ease-in-out);
  border: 1px solid var(--border-light);
  overflow: hidden;
}

.pet-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
  opacity: 0;
  transition: opacity var(--transition-normal) var(--ease-in-out);
}

.pet-card:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-sm);
}

.pet-card:hover::before,
.pet-card:focus::before {
  opacity: 1;
}

/* 紧凑模式 */
.pet-card.compact {
  padding: var(--space-md);
  margin-bottom: var(--space-sm);
}

.pet-card.compact .pet-avatar-container {
  width: 120rpx;
  height: 120rpx;
}

.pet-card.compact .pet-name {
  font-size: var(--font-md);
}

/* ==================== 头像区域 ==================== */

.pet-avatar-container {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin-bottom: var(--space-md);
  align-self: center;
}

.pet-avatar {
  width: 100%;
  height: 100%;
  border-radius: var(--radius-full);
  border: 4px solid var(--bg-primary);
  box-shadow: var(--shadow-sm);
  object-fit: cover;
}

.pet-avatar.placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--bg-secondary);
  color: var(--text-tertiary);
  font-size: var(--font-2xl);
}

.pet-species-badge {
  position: absolute;
  bottom: -4rpx;
  right: -4rpx;
  width: 56rpx;
  height: 56rpx;
  background: var(--primary-color);
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3px solid var(--bg-primary);
  box-shadow: var(--shadow-sm);
}

.species-text {
  color: var(--bg-primary);
  font-size: var(--font-xs);
  font-weight: var(--font-weight-semibold);
  text-align: center;
  line-height: 1;
}

/* 物种特定颜色 */
.pet-species-badge.dog {
  background: var(--pet-dog-color);
}

.pet-species-badge.cat {
  background: var(--pet-cat-color);
}

.pet-species-badge.bird {
  background: var(--pet-bird-color);
}

.pet-species-badge.rabbit {
  background: var(--pet-rabbit-color);
}

.pet-species-badge.hamster {
  background: var(--pet-hamster-color);
}

.pet-species-badge.other {
  background: var(--pet-other-color);
}

/* ==================== 信息区域 ==================== */

.pet-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--space-sm);
}

.pet-name-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--space-xs);
}

.pet-name {
  font-size: var(--font-xl);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
  line-height: var(--line-height-tight);
}

.pet-gender {
  font-size: var(--font-sm);
  color: var(--text-secondary);
  background: var(--bg-tertiary);
  padding: var(--space-xs) var(--space-sm);
  border-radius: var(--radius-sm);
  font-weight: var(--font-weight-medium);
}

.pet-details {
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
}

.pet-breed {
  font-size: var(--font-md);
  color: var(--text-secondary);
  line-height: var(--line-height-normal);
}

.pet-age {
  font-size: var(--font-sm);
  color: var(--text-tertiary);
  line-height: var(--line-height-normal);
}

.pet-weight {
  margin-top: var(--space-xs);
}

.weight-text {
  font-size: var(--font-sm);
  color: var(--text-secondary);
  background: var(--primary-bg);
  padding: var(--space-xs) var(--space-sm);
  border-radius: var(--radius-sm);
  font-weight: var(--font-weight-medium);
}

/* ==================== 操作按钮 ==================== */

.pet-actions {
  display: flex;
  gap: var(--space-sm);
  margin-top: var(--space-md);
  padding-top: var(--space-md);
  border-top: 1px solid var(--border-light);
}

.action-btn {
  flex: 1;
  padding: var(--space-sm) var(--space-md);
  border-radius: var(--radius-sm);
  text-align: center;
  font-size: var(--font-sm);
  font-weight: var(--font-weight-medium);
  transition: all var(--transition-fast) var(--ease-out);
  border: 1px solid transparent;
  position: relative;
  overflow: hidden;
}

.action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left var(--transition-normal) var(--ease-in-out);
}

.action-btn:active::before {
  left: 100%;
}

.action-btn.primary {
  background: var(--primary-color);
  color: var(--bg-primary);
}

.action-btn.primary:active {
  background: var(--primary-dark);
  transform: scale(0.96);
}

.action-btn.secondary {
  background: var(--bg-secondary);
  color: var(--text-primary);
  border-color: var(--border-normal);
}

.action-btn.secondary:active {
  background: var(--bg-tertiary);
  transform: scale(0.96);
}

.action-text {
  position: relative;
  z-index: 1;
}

/* ==================== 健康状态指示器 ==================== */

.health-indicators {
  display: flex;
  gap: var(--space-sm);
  margin-top: var(--space-md);
}

.indicator {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-xs);
  padding: var(--space-sm);
  border-radius: var(--radius-sm);
  font-size: var(--font-xs);
  font-weight: var(--font-weight-medium);
  transition: all var(--transition-fast) var(--ease-out);
}

.indicator-icon {
  font-size: var(--font-sm);
}

.indicator-text {
  line-height: 1;
}

/* 疫苗状态 */
.indicator.vaccine.completed {
  background: var(--success-light);
  color: var(--success-dark);
  border: 1px solid var(--success-color);
}

.indicator.vaccine.pending {
  background: var(--warning-light);
  color: var(--warning-dark);
  border: 1px solid var(--warning-color);
}

.indicator.vaccine.overdue {
  background: var(--error-light);
  color: var(--error-dark);
  border: 1px solid var(--error-color);
}

.indicator.vaccine.upcoming {
  background: var(--info-light);
  color: var(--info-dark);
  border: 1px solid var(--info-color);
}

/* 驱虫状态 */
.indicator.deworm.completed {
  background: var(--success-light);
  color: var(--success-dark);
  border: 1px solid var(--success-color);
}

.indicator.deworm.pending {
  background: var(--warning-light);
  color: var(--warning-dark);
  border: 1px solid var(--warning-color);
}

.indicator.deworm.overdue {
  background: var(--error-light);
  color: var(--error-dark);
  border: 1px solid var(--error-color);
}

.indicator.deworm.upcoming {
  background: var(--info-light);
  color: var(--info-dark);
  border: 1px solid var(--info-color);
}

/* ==================== 响应式设计 ==================== */

/* 小屏幕优化 */
@media screen and (max-width: 480px) {
  .pet-card {
    padding: var(--space-md);
  }
  
  .pet-avatar-container {
    width: 140rpx;
    height: 140rpx;
  }
  
  .pet-name {
    font-size: var(--font-lg);
  }
  
  .pet-actions {
    flex-direction: column;
  }
  
  .action-btn {
    margin-bottom: var(--space-xs);
  }
}

/* ==================== 可访问性增强 ==================== */

.pet-card:focus-visible {
  outline: 2px solid var(--primary-color);
  outline-offset: 2px;
}

.action-btn:focus-visible {
  outline: 2px solid var(--primary-color);
  outline-offset: 1px;
}

/* 高对比度模式 */
@media (prefers-contrast: high) {
  .pet-card {
    border-width: 2px;
    border-color: var(--text-primary);
  }
  
  .action-btn.secondary {
    border-width: 2px;
  }
}

/* 减少动画模式 */
@media (prefers-reduced-motion: reduce) {
  .pet-card,
  .action-btn,
  .indicator {
    transition: none;
  }
  
  .action-btn::before {
    display: none;
  }
}