/* pages/knowledge/knowledge.wxss */

.container {
  background: #f8fafc;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 搜索栏 */
.search-section {
  background: white;
  padding: 24rpx 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-bar {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.search-input-wrapper {
  flex: 1;
  position: relative;
  background: #f8fafc;
  border: 2rpx solid #e5e7eb;
  border-radius: 32rpx;
  overflow: hidden;
}

.search-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx 0 60rpx;
  font-size: 32rpx;
  color: #1e293b;
  background: transparent;
}

.search-icon {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #9ca3af;
}

.search-clear {
  padding: 20rpx;
}

.clear-text {
  font-size: 32rpx;
  color: #6366f1;
  font-weight: 500;
}

/* 分类筛选 */
.category-section {
  background: white;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #f1f5f9;
}

.category-scroll {
  width: 100%;
}

.category-chips {
  display: flex;
  padding: 0 32rpx;
  gap: 16rpx;
}

.category-chip {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 20rpx;
  background: #f8fafc;
  border: 2rpx solid #e5e7eb;
  border-radius: 32rpx;
  white-space: nowrap;
  position: relative;
  transition: all 0.3s ease;
}

.category-chip.active {
  background: rgba(99, 102, 241, 0.1);
  border-color: #6366f1;
}

.chip-icon {
  font-size: 24rpx;
}

.chip-text {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
}

.category-chip.active .chip-text {
  color: #6366f1;
  font-weight: 600;
}

.chip-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  background: #6366f1;
  color: white;
  font-size: 20rpx;
  font-weight: 600;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}

/* 内容区域 */
.content-section {
  flex: 1;
  padding: 32rpx;
}

/* 搜索结果 */
.search-results {
  /* 搜索结果容器 */
}

.search-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.search-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1e293b;
}

.search-count {
  font-size: 28rpx;
  color: #64748b;
}

.search-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.search-item {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  gap: 20rpx;
  transition: all 0.3s ease;
}

.search-item:active {
  transform: scale(0.98);
}

.search-item-content {
  flex: 1;
}

.search-item-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.search-item-summary {
  display: block;
  font-size: 28rpx;
  color: #64748b;
  line-height: 1.5;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.search-item-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.meta-category {
  font-size: 24rpx;
  color: #6366f1;
  background: rgba(99, 102, 241, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 600;
}

.meta-date {
  font-size: 24rpx;
  color: #94a3b8;
}

.search-item-arrow {
  font-size: 28rpx;
  color: #9ca3af;
  transform: rotate(90deg);
}

.search-empty {
  padding: 120rpx 0;
}

/* 推荐文章 */
.featured-section {
  margin-bottom: 48rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1e293b;
}

.section-count {
  font-size: 28rpx;
  color: #64748b;
  background: #f1f5f9;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.featured-scroll {
  width: 100%;
}

.featured-cards {
  display: flex;
  gap: 20rpx;
  padding: 8rpx;
}

.featured-card {
  width: 320rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  color: white;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.featured-card:active {
  transform: scale(0.95);
}

.featured-image {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.featured-emoji {
  font-size: 36rpx;
}

.featured-content {
  /* 推荐文章内容 */
}

.featured-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.featured-summary {
  font-size: 26rpx;
  opacity: 0.9;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

/* 文章列表 */
.articles-section {
  /* 文章列表容器 */
}

.articles-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.article-card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  gap: 24rpx;
  transition: all 0.3s ease;
}

.article-card:active {
  transform: scale(0.98);
}

.article-icon {
  width: 80rpx;
  height: 80rpx;
  background: #f8fafc;
  border: 2rpx solid #e5e7eb;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.icon-emoji {
  font-size: 36rpx;
}

.article-content {
  flex: 1;
}

.article-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.article-summary {
  display: block;
  font-size: 28rpx;
  color: #64748b;
  line-height: 1.5;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.article-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.meta-reading {
  font-size: 24rpx;
  color: #94a3b8;
}

.article-arrow {
  font-size: 28rpx;
  color: #9ca3af;
  transform: rotate(90deg);
}

.articles-empty {
  padding: 120rpx 0;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx 32rpx;
  border-top: 2rpx solid #f1f5f9;
  display: flex;
  gap: 24rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.action-button {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.action-button.secondary {
  background: #f8fafc;
  color: #64748b;
  border: 2rpx solid #e5e7eb;
}

.action-button.secondary:active {
  background: #f1f5f9;
  transform: scale(0.98);
}

.action-button.primary {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(99, 102, 241, 0.3);
}

.action-button.primary:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
}

.button-icon {
  font-size: 32rpx;
}

.button-text {
  font-size: 32rpx;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .content-section {
    padding: 24rpx;
  }
  
  .article-card,
  .search-item {
    padding: 24rpx;
  }
  
  .featured-card {
    width: 280rpx;
    padding: 24rpx;
  }
}




