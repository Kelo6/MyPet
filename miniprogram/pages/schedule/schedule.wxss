/* pages/schedule/schedule.wxss */

.container {
  background: #f8fafc;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 头部筛选区域 */
.header-section {
  background: white;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  position: sticky;
  top: 0;
  z-index: 100;
}

/* 标签页 */
.filter-tabs {
  display: flex;
  padding: 24rpx 32rpx 0;
}

.tab-item {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  transition: all 0.3s ease;
}

.tab-item.active .tab-text {
  color: #6366f1;
  font-weight: 700;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  border-radius: 3rpx;
}

.tab-text {
  font-size: 32rpx;
  color: #64748b;
  transition: all 0.3s ease;
}

.tab-badge {
  position: absolute;
  top: 16rpx;
  right: 8rpx;
  min-width: 32rpx;
  height: 32rpx;
  background: #6366f1;
  color: white;
  font-size: 20rpx;
  font-weight: 600;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}

.tab-badge.pending {
  background: #f59e0b;
}

.tab-badge.completed {
  background: #22c55e;
}

.tab-badge.overdue {
  background: #ef4444;
}

/* 宠物筛选 */
.pet-filter {
  padding: 24rpx 0;
  border-bottom: 2rpx solid #f1f5f9;
}

.pet-scroll {
  width: 100%;
}

.pet-chips {
  display: flex;
  padding: 0 32rpx;
  gap: 16rpx;
}

.pet-chip {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 24rpx;
  background: #f8fafc;
  border: 2rpx solid #e5e7eb;
  border-radius: 32rpx;
  white-space: nowrap;
  transition: all 0.3s ease;
}

.pet-chip.active {
  background: rgba(99, 102, 241, 0.1);
  border-color: #6366f1;
}

.chip-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
}

.chip-avatar-placeholder {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
}

.chip-text {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
}

.pet-chip.active .chip-text {
  color: #6366f1;
  font-weight: 600;
}

/* 内容区域 */
.content-section {
  flex: 1;
}

/* 空状态 */
.empty-container {
  padding: 120rpx 32rpx;
}

/* 计划列表 */
.schedule-list {
  padding: 32rpx;
}

/* 宠物分组 */
.pet-group {
  margin-bottom: 48rpx;
}

.pet-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.pet-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.pet-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  border: 4rpx solid #f1f5f9;
}

.pet-avatar-placeholder {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 700;
}

.pet-details {
  flex: 1;
}

.pet-name {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.pet-meta {
  font-size: 26rpx;
  color: #64748b;
}

.pet-stats {
  text-align: right;
}

.stats-text {
  font-size: 28rpx;
  color: #6366f1;
  font-weight: 600;
}

/* 计划项列表 */
.schedule-items {
  position: relative;
}

.schedule-item {
  display: flex;
  margin-bottom: 24rpx;
  transition: all 0.3s ease;
}

.schedule-item:last-child {
  margin-bottom: 0;
}

/* 时间轴 */
.timeline-line {
  position: relative;
  width: 80rpx;
  display: flex;
  justify-content: center;
}

.timeline-line::after {
  content: '';
  position: absolute;
  top: 80rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 4rpx;
  height: calc(100% + 24rpx);
  background: #e5e7eb;
}

.schedule-item:last-child .timeline-line::after {
  display: none;
}

.timeline-dot {
  width: 56rpx;
  height: 56rpx;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  z-index: 1;
  background: white;
  border: 4rpx solid #e5e7eb;
}

.timeline-dot.pending {
  border-color: #f59e0b;
  background: #fef3c7;
}

.timeline-dot.completed {
  border-color: #22c55e;
  background: #dcfce7;
}

.timeline-dot.overdue {
  border-color: #ef4444;
  background: #fef2f2;
}

.dot-icon {
  color: #64748b;
}

.timeline-dot.pending .dot-icon {
  color: #f59e0b;
}

.timeline-dot.completed .dot-icon {
  color: #22c55e;
}

.timeline-dot.overdue .dot-icon {
  color: #ef4444;
}

/* 计划内容 */
.schedule-content {
  flex: 1;
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.schedule-item.completed .schedule-content {
  background: #f8fffe;
  border: 2rpx solid #dcfce7;
}

.schedule-item.overdue .schedule-content {
  background: #fefefe;
  border: 2rpx solid #fecaca;
}

.schedule-header {
  margin-bottom: 16rpx;
}

.schedule-title {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  flex: 1;
}

.type-tag {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: white;
}

.type-tag.vaccine {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
}

.type-tag.deworm {
  background: linear-gradient(135deg, #f59e0b 0%, #f97316 100%);
}

.schedule-date {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.date-text {
  font-size: 28rpx;
  color: #64748b;
}

.date-status {
  font-size: 24rpx;
  font-weight: 600;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.date-status.upcoming {
  color: #6366f1;
  background: rgba(99, 102, 241, 0.1);
}

.date-status.today {
  color: #f59e0b;
  background: #fef3c7;
}

.date-status.overdue {
  color: #ef4444;
  background: #fef2f2;
}

.date-status.completed {
  color: #22c55e;
  background: #dcfce7;
}

/* 计划元信息 */
.schedule-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.meta-item {
  font-size: 26rpx;
  color: #64748b;
  background: #f1f5f9;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.meta-item.completed {
  color: #22c55e;
  background: #dcfce7;
}

/* 操作按钮 */
.schedule-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.action-btn.secondary {
  background: #f8fafc;
  color: #64748b;
  border: 2rpx solid #e5e7eb;
}

.action-btn.secondary:active {
  background: #f1f5f9;
}

.action-btn.primary {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  border: none;
}

.action-btn.primary:active {
  transform: scale(0.98);
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx 32rpx;
  border-top: 2rpx solid #f1f5f9;
  display: flex;
  gap: 24rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.action-button {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.action-button.secondary {
  background: #f8fafc;
  color: #64748b;
  border: 2rpx solid #e5e7eb;
}

.action-button.secondary:active {
  background: #f1f5f9;
  transform: scale(0.98);
}

.action-button.primary {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(99, 102, 241, 0.3);
}

.action-button.primary:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
}

.button-icon {
  font-size: 32rpx;
}

.button-text {
  font-size: 32rpx;
}

/* 完成确认弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  animation: fadeIn 0.3s ease;
}

.modal-content {
  width: 640rpx;
  max-height: 80vh;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  animation: slideUp 0.3s ease;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 2rpx solid #f1f5f9;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1e293b;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f1f5f9;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #64748b;
}

.modal-body {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.complete-info {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: #f8fafc;
  border-radius: 16rpx;
}

.complete-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.complete-date {
  font-size: 28rpx;
  color: #64748b;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 16rpx;
}

.date-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 24rpx;
  background: #f8fafc;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  font-size: 32rpx;
  color: #1e293b;
}

.picker-arrow {
  font-size: 28rpx;
  color: #9ca3af;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  background: #f8fafc;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #1e293b;
  line-height: 1.5;
}

.modal-actions {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx 32rpx;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.modal-btn.secondary {
  background: #f8fafc;
  color: #64748b;
  border: 2rpx solid #e5e7eb;
}

.modal-btn.secondary:active {
  background: #f1f5f9;
}

.modal-btn.primary {
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  border: none;
}

.modal-btn.primary:active {
  transform: scale(0.98);
}

.modal-btn:disabled {
  opacity: 0.5;
  transform: none;
}

/* 动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 响应式调整 */
@media (max-width: 375px) {
  .schedule-list {
    padding: 24rpx;
  }
  
  .schedule-content {
    padding: 24rpx;
  }
  
  .bottom-actions {
    padding: 20rpx 24rpx;
  }
  
  .modal-content {
    width: calc(100vw - 64rpx);
    margin: 0 32rpx;
  }
}




